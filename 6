#include<bits/stdc++.h>
using namespace std;

class Artist{
    string name;
    public:
        
        Artist(string art){
            name= art;
        }
        
        string sol(){
            return name;
        }
        
};

class Painter: public Artist{
    public:
        Painter(string art):Artist(art){}
        
        void getart(){
            cout<<sol()<<endl;
        }
};

class Sculptor: public Artist{
    public:
        Sculptor(string art):Artist(art){}
        
        void getart(){
            cout<<sol()<<endl;
        }
};

class Musician: public Artist{
    public:
        Musician(string art):Artist(art){}
        
        void getart(){
            cout<<sol()<<endl;
        }
};

int main(){

    Painter obj1("painting");
    Sculptor obj2("sculptor");
    Musician obj3("singing");
    obj1.getart();
    obj2.getart();
    obj3.getart();
    
    return 0;
}